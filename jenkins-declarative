pipeline {
    agent any
    stages {
        stage('Git Checkout') {
            steps {
              checkout([$class: 'GitSCM', 
                branches: [[name: '*/master']],
                doGenerateSubmoduleConfigurations: false,
                extensions: [[$class: 'CleanCheckout']],
                submoduleCfg: [], 
                userRemoteConfigs: [[url: 'https://github.com/nnsnarasimha/jendcltv.git']]])
              sh "ls -ltr"
          }
        }
        stage('Development'){
            steps {
		sh 'sudo rm -rf /var/www/html/dev/*'
                sh 'sudo rm -rf /var/www/html/dev/.git'
		sh 'sudo rm -rf /var/www/html/dev'
		sh 'sudo mkdir /var/www/html/dev'
                sh 'sudo systemctl start httpd'
                sh 'sudo git clone https://github.com/nnsnarasimha/jendcltv.git /var/html/dev'
            }
        }
        stage('QA'){
            steps {
		sh 'sudo mkdir /var/www/html/qa'	
                sh 'sudo rm -rf /var/www/html/qa/*'
                sh 'sudo rm -rf /var/www/html/qa/.git'
                sh 'sudo rm -rf /var/www/html/dev'
                sh 'sudo mkdir /var/www/html/dev'
                sh 'sudo systemctl start httpd'
                sh 'sudo git clone https://github.com/nnsnarasimha/jendcltv.git /var/www/html/qa'
            }
        }
        stage('Production'){
            steps {
		sh 'sudo mkdir /var/www/html/prod'
                sh 'sudo rm -rf /var/www/html/pord/*'
                sh 'sudo rm -rf /var/www/html/prod/.git'
                sh 'sudo rm -rf /var/www/html/dev'
                sh 'sudo mkdir /var/www/html/dev'
                sh 'sudo systemctl start httpd'
                sh 'sudo git clone https://github.com/nnsnarasimha/jendcltv.git /var/www/html/prod'
             }
        }        
    }
}

